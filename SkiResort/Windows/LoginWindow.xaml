<Window x:Class="SkiResort.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkiResort"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="61,93,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="108,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center"/>
        <Button Content="Log in" HorizontalAlignment="Left" Margin="167,153,0,0" VerticalAlignment="Top" Width="61" Click="Button_Click"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="41,123,0,0" VerticalAlignment="Top" Height="25"/>
        <PasswordBox HorizontalAlignment="Left" Margin="108,123,0,0" VerticalAlignment="Top" Width="120" Height="25" RenderTransformOrigin="0.713,-0.081" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
